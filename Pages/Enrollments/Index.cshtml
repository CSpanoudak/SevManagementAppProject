@page
@model SevManagementApp.Pages.Enrollments.IndexModel
@{
    ViewData["Title"] = "Enrollmentds";

}

<h2>Enrollments</h2>
<a class="btn btn-success btn-sm" href="/Enrollments/Create">New enrollment</a>
<table class="table">
    <thead>
        <tr>
           
            <th>Course (ID)</th>
            <th>Student(ID)</th>
            
            
        </thead>
        <tbody>
            @if (Model.enrollments is not null) 
            {
                @foreach (var enrollment in Model.enrollments) 
                {
                    <tr class="tr-hoverable">
                        <td>@enrollment.CourseId</td>
                        <td>@enrollment.StudentId</td>
                        
                        <td>
                            <a class="btn btn-info btn-sm text-light" 
                                    href="/Enrollments/Update?id=@enrollment.Id">Update</a>
                            <a class="btn btn-danger btn-sm" 
                                    href="/Enrollments/Delete?id=@enrollment.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
</table>
