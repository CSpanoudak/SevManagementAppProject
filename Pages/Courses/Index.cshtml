@page
@model SevManagementApp.Pages.Courses.IndexModel
@{
    ViewData["Title"] = "Courses";

}

<h2>List of Courses</h2>
<a class="btn btn-success btn-sm" href="/Courses/Create">New course</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Course</th>
            <th>Description</th>
            <th>Course's teacher (ID)</th>
            
        </thead>
        <tbody>
            @if (Model.courses is not null) 
            {
                @foreach (var course in Model.courses) 
                {
                    <tr>
                        <td>@course.Id</td>
                        <td>@course.CourseName</td>
                        <td>@course.Description</td>
                        <td>@course.TeachersId</td>
                        
                        <td>
                            <a class="btn btn-info btn-sm text-light" 
                                    href="/Courses/Update?id=@course.Id">Update</a>
                            <a class="btn btn-danger btn-sm" 
                                    href="/Courses/Delete?id=@course.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
</table>
